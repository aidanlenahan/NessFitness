# Default .gitattributes
# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Source code
*.py text eol=lf linguist-language=Python
*.tsx text eol=lf linguist-language=TypeScript
*.ts text eol=lf linguist-language=TypeScript
*.js text eol=lf linguist-language=JavaScript
*.jsx text eol=lf linguist-language=JavaScript
*.css text eol=lf linguist-language=CSS

# Configuration files
*.json text eol=lf linguist-language=JSON
*.yml text eol=lf linguist-language=YAML
*.yaml text eol=lf linguist-language=YAML
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Documentation
*.md text eol=lf linguist-language=Markdown linguist-detectable
*.txt text eol=lf
README* text eol=lf linguist-documentation
LICENSE* text eol=lf linguist-documentation

# Web files
*.html text eol=lf linguist-language=HTML
*.htm text eol=lf linguist-language=HTML
*.xml text eol=lf

# Shell scripts (ensure LF even on Windows)
*.sh text eol=lf
*.bash text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose*.yml text eol=lf
.dockerignore text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf
.gitmodules text eol=lf

# Environment files
.env* text eol=lf
*.env text eol=lf

# Python specific
requirements*.txt text eol=lf
Pipfile text eol=lf
Pipfile.lock text eol=lf
setup.py text eol=lf
setup.cfg text eol=lf
pyproject.toml text eol=lf

# Node.js specific
package.json text eol=lf linguist-language=JSON
package-lock.json text eol=lf linguist-generated linguist-language=JSON
yarn.lock text eol=lf linguist-generated
tsconfig*.json text eol=lf linguist-language=JSON

# Images (binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf
*.webp binary
*.avif binary

# Fonts (binary)
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary

# Archives (binary)
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.7z binary
*.rar binary

# Database files (binary)
*.db binary
*.sqlite binary
*.sqlite3 binary
*.backup binary

# Compiled files (binary)
*.pyc binary linguist-generated
*.pyo binary linguist-generated
*.pyd binary linguist-generated
*.so binary
*.dll binary
*.dylib binary
*.exe binary

# Other binary
*.pdf binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.wav binary

# Exclude from exports
.gitattributes export-ignore
.gitignore export-ignore
.vscode export-ignore
.idea export-ignore
*.log export-ignore
*.db export-ignore
*.backup export-ignore

# Diff settings for generated files
package-lock.json linguist-generated merge=ours
yarn.lock linguist-generated merge=ours
*.min.js linguist-generated
*.min.css linguist-generated
